{
  "name": "estoque-toras",
  "version": "1.0.10",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build:protect": "javascript-obfuscator renderer-dev.js --output renderer.js --string-array-encoding base64 --split-strings true --debug-protection true",
    "release": "npm run build:protect && electron-builder --publish always",
    "dist": "npm run build:protect && electron-builder"
  },
  "dependencies": {
    "better-sqlite3": "^11.0.0",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.7.3",
    "node-machine-id": "^1.1.12"
  },
  "rebuild": "electron-rebuild -f -w better-sqlite3",
  "build": {
    "appId": "com.estoquetoras.app",
    "productName": "Controle Estoque de Toras",
    "npmRebuild": true,
    "nodeGypRebuild": false,
    "asar": true,
    "asarUnpack": [
      "**/node_modules/better-sqlite3/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "MatteusItb",
        "repo": "toras-control"
      }
    ],
    "directories": {
      "output": "dist_setup"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "shortcutName": "Controle Estoque de Toras"
    },
    "files": [
      "**/*",
      "!renderer-dev.js",
      "!dist_setup/**/*"
    ]
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^26.4.0",
    "electron-rebuild": "^3.2.9",
    "javascript-obfuscator": "^4.1.1"
  }
}
